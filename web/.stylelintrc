{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "selector-class-pattern": [
      "^(?:[A-Z][a-zA-Z0-9]+)*(?:-[a-z0-9][a-zA-Z0-9]+)*?(?:--[a-z0-9][a-zA-Z0-9-]+)*?$|^(?:u|is|has|js)(?:-[a-z0-9][a-zA-Z0-9-]*)+$",
      {
        "message": "Class names should match the SUIT naming convention"
      }
    ],
    "max-nesting-depth": 2
  }
}